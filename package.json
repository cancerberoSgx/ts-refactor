{
  "name": "ts-refactor",
  "version": "0.0.10",
  "description": "TypeScript code refactor interactive CLI tool",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": "bin/ts-refactor.js",
  "scripts": {
    "watch": "tsc --watch",
    "build": "tsc",
    "test": "ts-node -T node_modules/jasmine/bin/jasmine",
    "test-debug": "node --inspect-brk node_modules/ts-node/dist/bin node_modules/jasmine/bin/jasmine.js",
    "prepare": "tsc",
    "format": "npx ts-refactor format \"src/**/*.ts*\" \"spec/interaction/**/*.ts*\" \"spec/*.ts*\" ./formatCodeSettings.json --tsConfigPath ./tsconfig.json --dontAsk",
    "organizeImports": "npx ts-refactor organizeImports \"src/**/*.ts*\" \"spec/interaction/**/*.ts*\" \"spec/*.ts*\" ./formatCodeSettings.json --tsConfigPath ./tsconfig.json --dontAsk ",
    "lint": " npm run organizeImports && npm run format",
    "clean": "rm -rf dist",
    "all": "npm run clean && npm run build && npm run lint && npm run build && npm test",
    "all-publish": "npm run all && git commit -a -m \"version patch\" && npm version patch && npm publish",
    "all-test": "npm run clean && npm run build && npm test"
  },
  "author": "Sebastian Gurin",
  "license": "MIT",
  "dependencies": {
    "ansi-escape-sequences": "^4.1.0",
    "diff": "^4.0.1",
    "inquirer": "^7.0.0",
    "inquirer-autocomplete-prompt": "^1.0.1",
    "inquirer-checkbox-plus-prompt": "^1.0.1",
    "inquirer-code-prompts": "0.0.3",
    "misc-utils-of-mine-generic": "^0.2.35",
    "shelljs": "^0.8.3",
    "ts-morph": "^4.2.0",
    "ts-simple-ast-extra": "^0.3.13",
    "yargs-parser": "^14.0.0"
  },
  "devDependencies": {
    "@phenomnomnominal/tsquery": "^3.0.0",
    "@types/diff": "^4.0.2",
    "@types/inquirer": "^6.5.0",
    "@types/jasmine": "^3.4.2",
    "@types/node": "^12.7.11",
    "@types/shelljs": "^0.8.5",
    "cli-driver": "0.2.4",
    "enquirer": "^2.3.2",
    "jasmine": "^3.5.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  },
  "keywords": [
    "TypeScript",
    "refactor",
    "command line",
    "interactive"
  ],
  "repository": "https://github.com/cancerberoSgx/ts-refactor"
}
